<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/storyImgVw"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/kid"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImgVw"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:padding="3dp"
                android:src="@drawable/cute_dog"
                app:layout_constraintBottom_toBottomOf="@+id/storyImgVw"
                app:layout_constraintEnd_toEndOf="@+id/storyImgVw"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toStartOf="@+id/storyImgVw"
                app:layout_constraintTop_toTopOf="@+id/storyImgVw"
                app:layout_constraintVertical_bias="0.050000012" />

            <View
                android:id="@+id/changeProfilePicView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/image_circle_background"
                app:layout_constraintBottom_toBottomOf="@+id/profileImgVw"
                app:layout_constraintEnd_toEndOf="@+id/profileImgVw"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/profileImgVw"
                app:layout_constraintTop_toTopOf="@+id/profileImgVw"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/storyType"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="@+id/storyImgVw"
                app:layout_constraintTop_toTopOf="@+id/storyImgVw"
                app:srcCompat="@drawable/live_icon" />

            <TextView
                android:id="@+id/nameStory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"
                android:textSize="18sp"
                android:text="Mr Singh"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/storyImgVw"
                app:layout_constraintStart_toStartOf="@+id/storyImgVw" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>